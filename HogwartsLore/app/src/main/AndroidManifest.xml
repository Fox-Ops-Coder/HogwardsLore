<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foxdev.hogwartslore">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/harry_lore_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/harry_lore_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.HogwartsLore"
        android:name=".core.HogwartsApp"
        android:usesCleartextTraffic="true"
        android:fullBackupContent="false">
        <activity android:name=".ui.activities.CoreActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>